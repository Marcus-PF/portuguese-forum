{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "allowJs": true,
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "lib": ["DOM", "ESNext"],
    "noEmit": true,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "types": [
      "node",
      "react",
      "@docusaurus/module-type-aliases",
      "katex"
    ],
    "baseUrl": ".",
    "paths": {
      "@site/*": ["./*"],
      "@ptforum/*": ["../../libs/*/src"]
    }
  }
}
