{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@ptforum/types": [
        "libs/shared/types/src"
      ],
      "@ptforum/shared/types": [
        "libs/shared/types/src/*"
      ],
      "@ptforum/utils": [
        "libs/shared/utils/src"
      ],
      "@ptforum/shared/utils": [
        "libs/shared/utils/src/*"
      ],
      "@ptforum/ui": [
        "libs/shared/ui/src"
      ],
      "@ptforum/shared/ui": [
        "libs/shared/ui/src/*"
      ],
      "@ptforum/ui/global.css": [
        "libs/shared/ui/src/themes/global.css"
      ],
      "@ptforum/hooks": [
        "libs/shared/hooks/src"
      ]
    },
    "composite": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "importHelpers": true,
    "isolatedModules": true,
    "lib": [
      "es2022"
    ],
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "es2022",
    "customConditions": [
      "development"
    ]
  }
}
